%h1.title Details about #{@movie.title}
%div.form  
  %ul#details
    %li
      Rating:
      = @movie.rating
    %li
      Released on:
      = @movie.release_date.strftime("%B %d, %Y")
  %h3 Description:
  .show_text
    #{@movie.description}
    
  = form_tag movie_path(@movie), :method => :delete do
    -if current_user
      = link_to edit_movie_path(@movie) , :class => "btn btn-primary btn-space" do
        %span.glyphicon.glyphicon-edit
        Edit
      
      = button_tag(type: 'submit', class: "btn btn-danger btn-space") do
        %span.glyphicon.glyphicon-trash
        Delete
    = link_to movie_index_path, :class => "btn btn-info" do
      %span.glyphicon.glyphicon-chevron-left
      Back

